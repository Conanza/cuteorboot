<div class="wrapper">
  <div class="box">
    <div class="cuteorboot row row-offcanvas row-offcanvas-left">
      <!-- <div id="sidebar" class="column col-xs-2 sidebar-offcanvas"></div> -->

      <div id="main" class="column col-sm-10 col-xs-11"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  window.CURRENT_USER_ID = "<%= current_user.id %>"
  window.CURRENT_USER_USERNAME = "<%= current_user.username.capitalize %>"

  var states = [];
  var animals = [];

  <% User::STATES.each do |state| %>
    states.push("<%= state.html_safe %>")
  <% end %>

  <% User::ANIMAL_TYPES.each do |animaltype| %>
    animals.push("<%= animaltype.html_safe %>")
  <% end %>

  window.STATES = states;
  window.ANIMAL_TYPES = animals;

  $(document).ready(function(){
    CuteOrBoot.initialize();
  });
</script>
