<%= render "layouts/navbar" %>
<%= render "layouts/errors" %>

<body id="home">
  <div class="row login">
    <h1>Log In</h1>
    <form action="<%= session_url %>" method="POST">
      <%= auth_token %>

      <div class="form-group col-xs-4 col-xs-offset-4">
        <input
          type="text"
          name="session[username]"
          placeholder="Petname"
          class="form-control">
      </div>

      <div class="form-group col-xs-4 col-xs-offset-4">
        <input
          type="password"
          name="session[password]"
          placeholder="Password"
          class="form-control">
      </div>

      <div class="form-group col-xs-4 col-xs-offset-4">
        <button type="submit" class="btn btn-primary">Get Cute!</button>
      </div>
    </form>
  </div>
</body>
