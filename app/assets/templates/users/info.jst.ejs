<section class="col-xs-8 user-profile">
<% var current_loc = (user.escape("city") + ", " + user.escape("state")) %>
<% var score = parseInt(10 * user.escape("rating")) %>
<% var rating = user.escape("rating") %>

<h4>Current Location</h4>
<p><%= current_loc %></p>
<hr>

<% attrs.forEach(function (attr) { %>
  <h4><%= attr[0] %></h4>

  <% if (attr[0] === "Animal Type") { %>
    <% var animal = user.escape(attr[1]) %>
    <p><%= animal.charAt(0).toUpperCase() + animal.substring(1) %></p>
  <% } else { %>
    <p><%= user.escape(attr[1]) %></p>
  <% } %>

  <hr>
<% }) %>

<h4>Hobbies
  <ul class="row">
    <% user.hobbies().each(function (hobby) { %>
      <li class="col-xs-3">
        <%= hobby.escape("name") %>
      </li>
    <% }) %>
  </ul>
  <hr>
</h4>
</section>

<sidebar class="stats-sidebar col-xs-4">
  <h4>Score</h4>

  <div class="radial-progress <%= ratingClass %>" data-progress="<%= score %>">
  	<div class="circle">
  		<div class="mask full">
  			<div class="fill"></div>
  		</div>
  		<div class="mask half">
  			<div class="fill"></div>
  			<div class="fill fix"></div>
  		</div>
  		<div class="shadow"></div>
  	</div>
  	<div class="inset">
  		<div class="percentage">
  			<div class="numbers"><span>-</span><span><%= rating %></span></div>
  		</div>
  	</div>
  </div>
  <hr>

  <h4>Awards</h4>
  <hr>

  <h4>Links</h4>
  <ul class="user-links">
    <li>
      <a href="<%= user.escape("website") %>"><%= user.escape("website") %></a>
    </li>
    <li>
      <a href="<%= user.escape("instagram") %>"><%= user.escape("instagram") %></a>
    </li>
  </ul>
</sidebar>
